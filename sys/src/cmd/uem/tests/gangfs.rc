#!/bin/rc
# 
# Gangfs Regression
#

echo '== Gangfs Regression =='

#
# Parameters
#
EXECFSLOG=./execfs.log
TESTDIR=.test

#
# Cleanup Previous Instances
#
fn cleanup {
	echo Cleaning up previous runs.
	rm -f /srv/mpipe
	unmount /n/test > /dev/null >[2] /dev/null
	unmount /proc > /dev/null >[2] /dev/null
	bind '#p' /proc
	kill mpipfs | rc
	kill execfs | rc
	kill gangfs | rc
}

#
# Startup execfs 
#
fn startup {

	echo Starting execfs...
	execfs -D -v 9>[2] execfs.log
	echo Starting gangfs...
	gangfs -D -v 9 >[2] gangfs.log
	echo Starting mpipefs...
	mpipefs -D -v 9>[2] mpipe.log
	sleep 1
}

#
# Setup a ramfs
#
fn testdir {
	mkdir -p $TESTDIR
}

fn myexec {
	mypid=`{cat}
	echo res 5
	echo exec /bin/cat $TESTDIR/test >>[2] gangfs.log
	sleep 5
	cat /proc/g$mypid/stdout > $TESTDIR/test1
}

fn myexec2 {
	mypid=`{cat}
	echo res 5
	echo exec /bin/cat >>[2] gangfs.log
	sleep 5 # shouldn't need this
	cat $TESTDIR/test > /proc/g$mypid/stdin
	cat /proc/g$mypid/stdout > $TESTDIR/test1
}

fn basic {
	echo -n Basic Test....

	# initialize files
	echo Hello Squidboy > $TESTDIR/test
	echo > $TESTDIR/test1

	# execute test
	myexec <>/proc/gclone >[1=0]

	# verify results (yes, I'm lazy)
	cat $TESTDIR/test > $TESTDIR/test2
	cat $TESTDIR/test >> $TESTDIR/test2
	cat $TESTDIR/test >> $TESTDIR/test2
	cat $TESTDIR/test >> $TESTDIR/test2
	cat $TESTDIR/test >> $TESTDIR/test2
	if(! cmp -s $TESTDIR/test2 $TESTDIR/test1) {
		echo FAILED!
		exit 'stdout: test failed'
	}

	echo Success!
	# cleanup
	rm -rf $TESTDIR/*
}

fn stdin {
	echo -n STDIN Test....

	# initialize files
	echo Hello Squidboy > $TESTDIR/test
	echo > $TESTDIR/test1

	# execute test
	myexec2 <>/proc/gclone >[1=0]

	# verify results (yes, I'm lazy)
	cat $TESTDIR/test > $TESTDIR/test2
	cat $TESTDIR/test >> $TESTDIR/test2
	cat $TESTDIR/test >> $TESTDIR/test2
	cat $TESTDIR/test >> $TESTDIR/test2
	cat $TESTDIR/test >> $TESTDIR/test2
	if(! cmp -s $TESTDIR/test2 $TESTDIR/test1) {
		echo FAILED!
		exit 'stdout: test failed'
	}

	echo Success!
	# cleanup
	rm -rf $TESTDIR/*
}

# Setup
cleanup
startup
testdir

# Tests
basic
#stdin # <- broken right now

# Cleanup
unmount $TESTDIR
rm -rf $TESTDIR
cleanup
