#!/bin/rc

DEBUG='-v 9'

IP=11.$treeip

TESTDIR=.test

GANGLOG=$TESTDIR'/gangfs-'$IP'.log'
EXECLOG=$TESTDIR'/execfs-'$IP'.log'
MPIPELOG=$TESTDIR'/mpipefs-'$IP'.log'

O=8.
PWD=`{pwd}#`
CMDPATH=$PWD'/../'$O

#if(~ $cpunode '1'){
