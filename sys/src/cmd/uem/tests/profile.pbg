#bind -a /n/root/sys /sys

# should already be running!
if(! test -e '/net/cs'){
	echo cs starting
	ndb/cs
}

@{
	rfork n

	mkdir -p $TESTDIR

	# start up the UEM stuff
	rm -f $EXECLOG
	if(! test -e '/srv/execfs-11.'$treeip){
	    echo 'starting execfs'
	    $CMDPATH^execfs $DEBUG -s execfs-11.^$treeip -E $CMDPATH^execcmd >>[2] $EXECLOG
	}
	mount -ca /srv/execfs-11.$treeip /proc

	# if we are an ionode
	if (~ $cpunode '0'){
	  # FIXME: this assumes that the IO node is created first...
	  if(! test -e /srv/gangfs-11.$treeip){
		echo 'starting gangfs on IO node treeip='11.^$treeip
		$CMDPATH^gangfs $DEBUG -s gangfs-11.^$treeip -n 11.^$treeip >>[2] $GANGLOG
	  }
	  mount -ca /srv/gangfs-11.$treeip /proc
	}
	if (~ $cpunode '1'){
	  if(! test -e /srv/gangfs-11.$treeip){
		echo 'starting gangfs on CPU node treeip='11.^$treeip
		$CMDPATH^gangfs $DEBUG -s gangfs-11.^$treeip -p 11.^$IO -n 11.^$treeip >>[2] $GANGLOG
	  }
	  mount -ca /srv/gangfs-11.$treeip /proc
	}

        #csrv
	if(! test -e '/srv/mpipe'){
	    echo 'starting mpipe'
	    $CMDPATH^mpipefs >>[2] $MPIPELOG
	}
	mount -ca /srv/mpipe /proc

	# adds an extra hop but allows visibility of mpipefs
	if(! test -e '/srv/uem'){
		echo 'exporting 11.'^$treeip
		#srvfs uem /proc
		srvfs 11.$treeip /
	}
}

mount -ca /srv/11.$treeip /n/11.$treeip

