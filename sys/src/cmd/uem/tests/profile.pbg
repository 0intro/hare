#!/bin/rc

DEBUG='-v 9'

TESTDIR=.test

GANGLOG=$TESTDIR'/gangfs'-11.$treeip'.log'
EXECLOG=$TESTDIR'/execfs'-11.$treeip'.log'
MPIPELOG=$TESTDIR'/mpipefs'-11.$treeip'.log'

O=8.
PWD=`{pwd}#`
CMDPATH=$PWD'/../'$O

