#	bind -c /n/frontend^$plan9root /n/root
#}

## bind our shit for now
#bind -a /n/root /
#bind -b /n/root/power/bin /bin
#bind -b /n/root/rc/bin /bin
#bind -a /n/root/sys /sys

# should already be running!
if(! test -e '/net/cs'){
	echo cs starting
	ndb/cs
}

@{
	rfork n

	mkdir -p $TESTDIR

	# start up the UEM stuff
	rm -f $EXECLOG
	if(! test -e '/srv/execfs-'$IP){
	    echo 'starting execfs'
	    $CMDPATH^execfs $DEBUG -s execfs-$IP -E $CMDPATH^execcmd -T $TESTDIR>>[2] $EXECLOG
	}
	mount -ca /srv/execfs-$IP /proc

	# if we are an ionode
	if (~ $cpunode '0'){
	  # FIXME: this assumes that the IO node is created first...
	  if(! test -e /srv/gangfs-$IP){
		echo 'starting gangfs on IO node treeip='$IP
		$CMDPATH^gangfs $DEBUG -s gangfs-$IP -n $IP >>[2] $GANGLOG
	  }
	  mount -ca /srv/gangfs-$IP /proc
	}
	if (~ $cpunode '1'){
	  if(! test -e /srv/gangfs-$IP){
		echo 'starting gangfs on CPU node treeip='$IP
		$CMDPATH^gangfs $DEBUG -s gangfs-$IP -p $IP -n $IP >>[2] $GANGLOG
	  }
	  mount -ca /srv/gangfs-$IP /proc
	}

        #csrv
	if(! test -e '/srv/mpipe'){
	    echo 'starting mpipe'
	    $CMDPATH^mpipefs >>[2] $MPIPELOG
	}
	mount -ca /srv/mpipe /proc

	# adds an extra hop but allows visibility of mpipefs
	if(! test -e /srv/$IP){
		echo 'exporting '$IP
		#srvfs uem /proc
		srvfs $IP /
	}
}

mount -ca /srv/$IP /n/$IP

