#################### cleaning #####################

clean::
	-rm -f *~ core
ifneq ($(TYPE),s)
ifneq ($(SILENT),)
	-@#echo "  Cleaning..."
endif
	-rm -f *.aux *.log *.tmp *.dvi *.bbl *.blg *.srt
	-rm -f *.glo *.glg *.gls *.ist *.out *.toc *.idx
	-rm -f *.acn *.acr *.alg *.not *.nlg *.nlt *.ntn
	-rm -f $(CLEANFILES)
endif

pdf-clean:: clean
ifneq ($(TYPE),s)
ifneq ($(SILENT),)
	-@echo "  Cleaning PDF and PS's..."
endif
	-rm -f *.ps *.pdf 
endif

realclean:: pdf-clean clean
ifneq ($(TYPE),s)
ifneq ($(SILENT),)
	-@echo "  Cleaning everything..."
endif
	-rm -f *.gtd *.gtc
	-rm -f $(REALCLEANFILES)
endif

dir-clean::
ifneq ($(TYPE),s)
	-@$(MAKE) -s clean
	-@for d in ${DIRS}; do\
	  if ! [ "`basename $$d`" = ".hg" ] ; then\
	    echo "DIR-CLEAN=$(PWD)/$$d";\
	    (cd $$d && $(MAKE) -s dir-clean);\
	  fi;\
	done
endif


dir-realclean:: 
ifneq ($(TYPE),s)
	-@$(MAKE) -s realclean
	-@for d in ${DIRS}; do\
	  if ! [ "`basename $$d`" = ".hg" ] ; then\
	    echo "DIR-REALCLEAN=$(PWD)/$$d";\
	    (cd $$d && $(MAKE) -s dir-realclean);\
	  fi;\
	done
endif

gtd-clean::
	-@echo "  Cleaning all gtd's..."
	-@find . -name \*.gtd -exec rm {} \; -print

